            <li>
                <label>edge</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>100</power>
                <cooldownTime>1.75</cooldownTime>
				<chanceFactor>0.8</chanceFactor>
				<armorPenetration>2.7</armorPenetration>
            </li>
